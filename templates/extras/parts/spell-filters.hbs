<input type="text" id="searchTerm" placeholder="Search..." class="sheet-input spell-filter-criteria" {{disabled initialCriteria.studies}} />
<div class="newera-itemsheet-properties">
    <h4>Base Level</h4>
    <input class="sheet-input half-width spell-filter-criteria" id="levelMin" value="{{initialCriteria.level.min}}" min="1" max="10" type="number" {{disabled initialCriteria.studies}} /> - 
    <input class="sheet-input half-width spell-filter-criteria" id="levelMax" value="{{initialCriteria.level.max}}" min="1" max="10" type="number" {{disabled initialCriteria.studies}} />
</div>
<div class="newera-itemsheet-properties">
    <h4>Rarity</h4>
    <select id="rarity" class="sheet-input spell-filter-criteria" {{disabled initialCriteria.studies}}>
        <option value="1" {{selected initialCriteria.rarity "1"}}>Common</option>
        <option value="2" {{selected initialCriteria.rarity "2"}}>Uncommon</option>
        <option value="3" {{selected initialCriteria.rarity "3"}}>Rare</option>
        <option value="4" {{selected initialCriteria.rarity "4"}}>Legendary</option>
        <option value="5" {{selected initialCriteria.rarity "5"}}>Restricted</option>
        <option value="6" {{selected initialCriteria.rarity "6"}}>Classified</option>
        <option value="7" {{selected initialCriteria.rarity "7"}}>Mystery</option>
        <option value="8" {{selected initialCriteria.rarity "8"}}>Innate</option>
        <option value="0" {{selected initialCriteria.rarity "0"}}>All</option>
    </select>
</div>
<div class="newera-itemsheet-properties">
    <h4>Spell Type</h4>
    <select id="spellType" class="sheet-input spell-filter-criteria" {{disabled initialCriteria.studies}}>
        <option value="C" {{selected initialCriteria.spellType "C"}}>Cantrip</option>
        <option value="Q" {{selected initialCriteria.spellType "Q"}}>Quick (1 Frame)</option>
        <option value="S" {{selected initialCriteria.spellType "S"}}>Spell (2 Frames)</option>
        <option value="G" {{selected initialCriteria.spellType "G"}}>Charged (3 Frames)</option>
        <option value="L" {{selected initialCriteria.spellType "L"}}>Long</option>
        <option value="F" {{selected initialCriteria.spellType "F"}}>Sustained</option>
        <option value="R" {{selected initialCriteria.spellType "R"}}>Ritual</option>
        <option value="ES" {{selected initialCriteria.spellType "ES"}}>Simple Enchantments</option>
        <option value="EX" {{selected initialCriteria.spellType "EX"}}>Complex Enchantments</option>
        <option value="EC" {{selected initialCriteria.spellType "EC"}}>Components</option>
        <option value="E" {{selected initialCriteria.spellType "E"}}>All Enchantments</option>
        <option value="SS" {{selected initialCriteria.spellType "SS"}}>All Spells</option>
        <option value="SE" {{selected initialCriteria.spellType "SE"}}>All</option>
    </select>
</div>
<div class="newera-itemsheet-properties">
    <h4>Sort By</h4>
    <select id="sort" class="sheet-input spell-filter-criteria" {{disabled initialCriteria.studies}}>
        <option value="0" {{selected initialCriteria.sortFunction "0"}}>Rarity Low to High</option>
        <option value="1" {{selected initialCriteria.sortFunction "1"}}>Rarity High to Low</option>
        <option value="2" {{selected initialCriteria.sortFunction "2"}}>Level Low to High</option>
        <option value="3" {{selected initialCriteria.sortFunction "3"}}>Level High to Low</option>
        <option value="4" {{selected initialCriteria.sortFunction "4"}}>A to Z</option>
        <option value="5" {{selected initialCriteria.sortFunction "5"}}>Spell Study Guide</option>
    </select>
</div>
<h3 class="newera-section-header">Filter Results</h3>
<div class="feat-filter-option">
    {{#each spellLists as |list index|}}
        <input type="checkbox" class="spell-filter-criteria" data-filter-category="spellList" data-filter-sub-category="{{index}}" {{checked list.checked}} {{disabled ../initialCriteria.studies}} /> {{list.label}}
    {{/each}}
</div>
<div class="feat-filter-option">
    <input type="checkbox" class="spell-filter-criteria" data-filter-category="elemental" {{checked initialFilterData.elemental}} {{disabled initialCriteria.studies}} /> Elemental
    <div class="feat-filter-sub-options" data-filter-category="elemental">
        <input type="checkbox" class="spell-filter-criteria" data-filter-category="elemental" data-filter-sub-category="PY" {{checked initialFilterData.pyromancy}} {{disabled initialCriteria.studies}} /> Pyromancy <br />
        <input type="checkbox" class="spell-filter-criteria" data-filter-category="elemental" data-filter-sub-category="HM" {{checked initialFilterData.cryomancy}} {{disabled initialCriteria.studies}} /> Cryomancy <br />
        <input type="checkbox" class="spell-filter-criteria" data-filter-category="elemental" data-filter-sub-category="GE" {{checked initialFilterData.lithomancy}} {{disabled initialCriteria.studies}} /> Lithomancy <br />
        <input type="checkbox" class="spell-filter-criteria" data-filter-category="elemental" data-filter-sub-category="EV" {{checked initialFilterData.evocation}} {{disabled initialCriteria.studies}} /> Evocation <br />
    </div>
</div>
<div class="feat-filter-option">
