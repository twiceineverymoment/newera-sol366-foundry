<table class="newera-actorsheet-table">
    <tr>
        <th colspan="3">ITEMS</th>
    </tr>
    {{#each inventory.items as |item id|}}
    <tr class="inventory-entry inventory-entry-backpack newera-draggable-equipment" data-item-id="{{item._id}}" draggable="true">
        <td class="item-edit"><img class="skill-icon" src="{{item.img}}" draggable="true"/></td>
        <td class="item-edit">
            {{item.system.listDisplayName}}
            {{#if item.system.rollQuantity}}
                <span class="item-quantity-roll">
                    <img class="die" src="systems/newera-sol366/resources/unknown.png" />
                </span>
            {{/if}}
        </td>
        <td>
            <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
            <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
        </td>
    </tr>
    {{/each}}
    {{#if this.isEditable}}
    <tr>
        <td colspan="3"><i>Drag items from the Compendium, or click on the <b>+</b> icons below to add items.</i></td>
    </tr>
    {{/if}}
</table>

