<div class="newera-itemsheet-properties" style="text-align: center">
  <div class="newera-itemsheet-property-50">
    <h4>CASTER LEVEL</h4>
    <div class="summary-stat-total">
      <h2 class="sheet-output-major"><input type="text" class="sheet-input" style="display: inline; max-width: 70px" name="system.casterLevel" value="{{system.casterLevel}}" data-dtype="Number" /></h2>
      <span class="rollable" data-roll="d20+@casterLevel" data-label="Spellcasting Check">
        <img class="die" src="systems/newera-sol366/resources/d20-orange.png" title="General Spellcasting Check" />
      </span>
    </div>
  </div>
  <div class="newera-itemsheet-property-50">
    <h4>SPELLCRAFT</h4>
    <div class="summary-stat-total">
      <h2 class="sheet-output-major"><input type="text" class="sheet-input" style="display: inline; max-width: 70px" name="system.spellcraft" value="{{system.spellcraft}}" data-dtype="Number" /></h2>
      <span class="rollable" data-roll="d20+@casterLevel+@spellcraft" data-label="Spellcraft Check">
        <img class="die" src="systems/newera-sol366/resources/d20-orange.png" title="General Spellcasting Check" />
      </span>
    </div>
  </div>
</div>
<h3 class="table-header">Magic Skills</h3>
<table class="newera-actorsheet-table">
  <tr>
    <th>SKILL</th>
    <th colspan="2">LEVEL</th>
    <th>ABILITY</th>
    <th>BONUS</th>
    <th>MODIFIER</th>
  </tr>
  {{#each system.magic as |skill key|}}
  <tr>
    <td style="width: 30%">
      <span class="rollable" data-roll="d20+@magic.{{key}}.mod" data-label="{{skill.label}}">
        <img class="skill-icon" src="{{skill.image}}" />
        {{skill.label}}
      </span>
    </td>
    <td style="width: 15%"><input type="text" class="sheet-input" name="system.magic.{{key}}.level" value="{{skill.level}}" data-dtype="Number" /></td>
    <td style="width: 10%">
      <div class="skill-checkbox">
        <input type="checkbox" class="skill-checkbox" name="system.magic.{{key}}.natural" {{checked skill.natural}} />
        <label for="system.magic.{{key}}.natural" title="Natural Skill">N</label>
      </div>
      <div class="skill-checkbox">
        <input type="checkbox" class="skill-checkbox" name="system.magic.{{key}}.grandMaster" {{checked skill.grandMaster}} />
        <label for="system.magic.{{key}}.grandMaster" title="Grand Master">GM</label>
      </div>
    </td>
    <td style="width: 15%"><span class="sheet-output-minor">{{numberFormat skill.baseMod decimals=0 sign=true}}</span></td>
    <td style="width: 10%"><input type="text" class="sheet-input" name="system.magic.{{key}}.bonus" value="{{skill.bonus}}" data-dtype="Number" /></td>
    <td style="width: 20%">
      <span class="rollable sheet-output-major" data-roll="d20+@magic.{{key}}.mod" data-label="{{skill.label}} Magic Skill Check">
        {{numberFormat skill.mod decimals=0 sign=true}}
        <img class="die" src="systems/newera-sol366/resources/d20-orange.png" />
      </span>
      <span class="rollable sheet-output-major" data-roll="d20+@spellcraft+@magic.{{key}}.mod" data-label="{{skill.label}} Spellcraft Check">
        <img class="die" src="systems/newera-sol366/resources/scroll-quill.png" />
      </span>
    </td>
  </tr>
  {{/each}}
  <tr>
    <td colspan="6">
      <a class="improveSkillButton"><i class="fas fa-plus"></i> IMPROVE SKILLS</a>
    </td>
  </tr>
</table>

